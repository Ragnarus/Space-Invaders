<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MultiplayerLobbyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

    <TextView
        android:id="@+id/ip_address_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IP Address will be displayed here"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/start_server_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Server"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/ip_address_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_client_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:hint="Enter server IP address"
        android:inputType="text" />

    <Button
        android:id="@+id/start_client_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Client"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/start_server_button"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"/>
    </LinearLayout>
</FrameLayout>